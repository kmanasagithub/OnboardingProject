<%= form_with(model: image) do |form| %>
  <% if image.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(image.errors.count, "error") %> prohibited this image from being saved:</h2>

      <ul>
        <% image.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% image_categories = ['nature', 'travel', 'food', 'architecture', 'technology', 'fashion', 'sports', 'animals', 'art', 'people'] %>
  <div class="container">
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>
  <br/>
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class:"form-control" %>
  </div>
  <br/>
  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url, class:"form-control", required:"true" %>
  </div>
  <div class="error">
    error: <%= image.errors.full_messages_for(:url).first %>
  </div>
  <br/>
  <%= form.label :tags, style: "display: block" %>
  <div style= "display: flex;display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    flex-direction: row;">
      <% image_categories.each do |category| %>
        <div class="checkbox, form-check">
         <%= check_box_tag "image_categories[]", category, class:"form-check-input" %>  
         <%= label_tag category, category.capitalize, class:"form-check-label" %>  
        </div>
      <% end %>
      <%= form.text_area :tags, class:"form-control", hidden:"true" %>
  </div>
  <br/>

  
<br/>
  <div class="d-grid">
    <%= form.submit class:"btn btn-primary" %>
  </div>
</div>
<% end %>
